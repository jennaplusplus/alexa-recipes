<h1>New Recipe</h1>

<div class="row">
  <div class="col-md-12">
    <% if @recipe.errors %>
      <ul>
        <% @recipe.errors.each do |column, message| %>
          <li>
            <strong><%= column.capitalize %></strong> <%= message %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>

<%= form_for [current_user, @recipe], :html => { :class => "form" } do |f| %>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :name %>
        <p> The best recipe names are short and simple, like <em>Chocolate Chip Cookies</em> or <em>Pizza Dough</em>.</p>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :prep_time %>
        <p> A time like
          <em>10 minutes </em>
          or
          <em>1 1/2 hours</em>
        </p>
        <%= f.text_field :prep_time, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :cook_time %>
        <p> A time like
          <em>10 minutes </em>
          or
          <em>1 1/2 hours</em>
        </p>
        <%= f.text_field :cook_time, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :servings %>
        <p> A number like
          <em>4</em>
          or
          <em>24</em>
        </p>
        <%= f.number_field :servings, min: 1, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>
  </div>

  <!-- <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :ingredients %>
        <%= f.text_area :ingredients, class: "form-control" %>
      </div>
    </div>
  </div> -->

  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">
              Ingredient name
            </th>
            <th scope="col">
              Measurement/number
            </th>
            <th scope="col">
              Unit
            </th>
          </tr>
        </thead>
        <tbody>
          <% 5.times do %>
            <tr>
              <td>
                <input class="form-control" type="text" name="recipe[ingredients][][name]">
              </td>
              <td>
                <input class="form-control" type="text" name="recipe[ingredients][][measurement]">
              </td>
              <td>
                <input class="form-control" type="text" name="recipe[ingredients][][unit]">
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :steps %>
        <%= f.text_area :steps, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :notes %>
        <%= f.text_area :notes, class: "form-control" %>
      </div>
      <%= f.submit "Submit", class: "btn btn-default" %>
    </div>
  </div>




<% end %>
